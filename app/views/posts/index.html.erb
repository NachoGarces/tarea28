<p style="color: green"><%= notice %></p>

<h1>Posts</h1>

<div id="posts">
  <% @posts.each do |post| %>
    <p>
      <strong>Foto:</strong>
      <% if post.foto.attached? %>
        <image src="<%= url_for(post.foto) %>" height=200>
      <% end %>
  </p>
    <p>
      <%= link_to "Show this post", post %>
    </p>
  <% end %>
</div>

<%= link_to "New post", new_post_path %>
